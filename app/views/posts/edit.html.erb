<h1 class="text-center my-4">edit post</h1>

<div class="col-md-6 offset-md-3">
    <%= form_with scope: :post, model: @post , local: true do |form| %>
        <div>
            <% if @post.errors.any? %>
                <ul>
                    <% @post.errors.each do |e| %>
                        <li><%= e.full_message %></li>
                    <% end %>
                </ul>
            <% end %>
        </div>
        
        <div class="form-group">
            <%= form.text_field :title, placeholder: "Title", class: "form-control" %>
        </div>
        <div class="form-group">
            <p><%= form.text_area :body, placeholder: "Body", class: "form-control", rows: 10 %></p>
        </div>
        <%= form.submit class: "btn btn-dark" %>
        <%= link_to 'Go back', @post, class: "btn btn-primary" %>
    <% end %>
</div>