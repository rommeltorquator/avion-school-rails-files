<h1 class="text-center my-5 display-2">Welcome to my Website</h1>
<h2 class="mb-3">Please feel free to read my posts ~</h2>

<div class="card-columns">
    <% @posts.each do |p| %>
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"><%= link_to p.title, p %></h5>
                <p class="card-text"><%= p.body %></p>
                <p class="card-text">Created at: <small class="text-muted"><%= p.created_at %></small></p>
            </div>
        </div>
    <% end %>
</div>

<%= link_to 'New Post', new_post_path %>